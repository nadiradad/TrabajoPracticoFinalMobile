<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rvItemCronograma"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="16dp"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/rounded_corner_view"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivCronograma"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvCronogramaNombreTp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TP Programacion"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivCronograma"/>

    <TextView
        android:id="@+id/tvCronogramaFechaTp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:textColor="#38BDF8"
        android:text="Fecha entrega: 24/06/25"
        app:layout_constraintStart_toEndOf="@id/ivCronograma"
        app:layout_constraintTop_toBottomOf="@id/tvCronogramaNombreTp" />

</androidx.constraintlayout.widget.ConstraintLayout>